+if tmplang =~ "^ko"
+  set guifont=Luxi\ Mono
+elseif tmplang =~ "^ja"
+  set guifont=Luxi\ Mono
+elseif tmplang =~ "^zh"
+  set guifont=Luxi\ Mono
+else
+  set guifont=monospace
+endif
