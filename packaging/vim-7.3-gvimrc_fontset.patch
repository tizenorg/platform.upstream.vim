+
+let tmplang = $LC_ALL
+if tmplang =~ "^$"
+  let tmplang = $LC_CTYPE
+endif
+if tmplang =~ "^$"
+  let tmplang = $LANG
+endif
+if tmplang =~ "^$"
+  let tmplang = "en_US"
+endif
